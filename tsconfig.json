{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@domain/*": ["domain/*"],
            "@infra/*": ["infrastructure/*"],
            "@use-cases/*": ["use-cases/*"],
            "@adapters/*": ["adapters/*"],
            "@main/*": ["main/*"],
            "@utils/*": ["utils/*"],
        },
        "rootDirs": ["src"],
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowJs": true
    },
    "include": ["src", "tests"],
    "exclude": []
}
